<div class="container padder">
<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8 jumbotron">
		<h2>Places</h2>
		<ul class="list-group ">			
			<% @places.each do |place| %>
                <li class="list-group-item"><%= link_to place.name+" - "+place.average_score.to_s, place%></li>
            <% end %>
        </ul>
           
		<h2>Foods</h2>	
		<ul class="list-group ">			
			<% @foods.each do |food| %>
				<% if(food.place != nil) %>
	                <li class="list-group-item"><%= link_to food.name+" - "+food.average_score.to_s+" ("+food.place.name+")", food %></li>
	            <% end %>   
            <% end %>
		</ul>
           
		<h2>Reviews</h2>
		<ul class="list-group ">			
			<% @reviews.each do |review| %>
            	<li class="list-group-item"><%= link_to review.title+" - "+review.rating.round(1).to_s+" ("+review.food.name+" : "+review.food.place.name+")", review%></li>
            <% end %>
		</ul>
           
		<h2>Users</h2>
		<ul class="list-group ">			
			<% @users.each do |user| %>
                <li><%= link_to user.email, '#', :class => "list-group-item" %></li>
            <% end %>
		</ul>
	</div><!--end col-->
	<div class="col-md-2 "></div>
</div><!--end row-->
</div><!--end container-->