<div class="container padder">
	
<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6 jumbotron">
		
	<div class="row centerer">
	<h2><strong>Sign In</strong></h2>
	</div>
	
	<div class="row form-group">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div><!-- <%= f.label :email %><br /> -->
			<%= f.email_field :email, autofocus: true, :placeholder => "Your Email", :class => "form-control" %></div>
							
			<div><!-- <%= f.label :password %><br /> -->
			<%= f.password_field :password, autocomplete: "off", :placeholder => "Your Password", :class => "form-control"  %></div>
			
			<% if devise_mapping.rememberable? -%>
			<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			<% end -%>
			
			<div><%= f.submit "Sign in to URHungry", :class => "btn btn-success btn-lg btn-block" %></div>
		<% end %>
	</div>
	
	<div class="row centerer">
	<p>Already have an account? Then
	<%= render "devise/shared/links" %>
	</p></div>

	</div>
	<div class="col-md-3"></div>
</div>
</div>