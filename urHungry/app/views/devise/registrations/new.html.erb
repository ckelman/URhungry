<div class="container starter-template">
	
<%if(notice != nil)%>
	<h2 class="alert alert-success starter-template"><%= notice %></h2>
<% end %>

<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10 jumbotron">
		<h2><strong>Sign Up</strong></h2>
		
		<div class="col-md-6">
			<h3><strong>Share, Rate, Review.</strong></h3>
			<p>Sign up for URHungry to post reviews, rate foods and more!</p>
		</div>
		
		<div class="col-md-6 form-group">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>
			  	
				<div> <!-- <%= f.label :email %> -->
				<%= f.email_field :email, autofocus: true, :placeholder => "Your Email", :class => "form-control" %></div>
			
				<div><!-- <%= f.label :password %> -->
				<%= f.password_field :password, autocomplete: "off", :placeholder => "Your Password (at least 8 characters)", :class => "form-control"  %></div>
				
				<div><!-- <%= f.label :password_confirmation %> -->
				<%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm password", :class => "form-control"  %></div>
				
				<div class="field">
				<%= f.hidden_field :is_admin, :value => false%></div>

				<%= f.submit "Sign up for URHungry", :class => "btn btn-success btn-lg btn-block" %>
				
			<% end %>
		</div>
		
		<!-- This looks a little weird, maybe don't do the render thing or else change what the text looks like in _links -->
		<div class="row col-md-12">
			<p>Already have an account? Then
			<%= render "devise/shared/links" %>
		</p></div>

	</div>
	<div class="col-md-1"></div>
</div>
</div>
