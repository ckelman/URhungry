<!-- Use javascript to make fields update outline using bootstrap .has-error, .has-success -->

<div class="container starter-template">

<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10 jumbotron">
		<h2><strong>Sign Up</strong></h2>
		
		<div class="col-md-6">
			<h3><strong>Share, Rate, Review.</strong></h3>
			<p>Sign up for URHungry to post reviews, rate foods and more!</p>
		</div>
		
		<div class="col-md-6 form-group">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>
			  	
				<div> <!-- <%= f.label :email %> -->
				<%= f.email_field :email, autofocus: true, :placeholder => "Your Email", :class => "form-control", :id => "email-input" %></div>
			
				<div><!-- <%= f.label :password %> -->
				<%= f.password_field :password, autocomplete: "off", :placeholder => "Your Password (at least 8 characters)", :class => "form-control", :id => "password-input" %></div>
				
				<div><!-- <%= f.label :password_confirmation %> -->
				<%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm password", :class => "form-control", :id => "password-confirm-input" %></div>
				
				<div class="field">
				<%= f.hidden_field :is_admin, :value => false%></div>

				<%= f.submit "Sign up for URHungry", :class => "btn btn-success btn-lg btn-block" %>
				
			<% end %>
		</div>
		
		<!-- This looks a little weird, maybe don't do the render thing or else change what the text looks like in _links -->
		<div class="row col-md-12">
			<p>Already have an account? Then
			<%= render "devise/shared/links" %>
		</p></div>

	</div>
	<div class="col-md-1"></div>
</div>
</div>

<script type="text/javascript">
	var email = document.getElementById('email-input');
	var password = document.getElementById('password-input');
	var password_confirm = document.getElementById('password-confirm-input');

	email.addEventListener("keyup", checkEmail, false);
	email.addEventListener("click", checkEmail, false);

	password.addEventListener("keyup", checkPassword, false);
	password.addEventListener("click", checkPassword, false);
	
	password_confirm.addEventListener("keyup", confirmPassword, false);
	password_confirm.addEventListener("click", confirmPassword, false);
</script>
