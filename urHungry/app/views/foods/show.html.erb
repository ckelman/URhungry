<div class="padder container">

<div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 jumbotron">
        	<div class="starter-template">
        	  <h1><%= @food.name %></h1>
				<p>
				  <strong> <%= @food.place.name %> </strong> <br />
				  <strong>Average rating: <%= @food.average_score %> / 5.0 (<%= @food.reviews.size %> reviews) </strong>
				</p>
			<!-- For rating
				<p>Average rating</p>
				<div id="star"></div>
				
				<p>Your rating</p>
				<div id="user_star"></div> -->
				
				<%= link_to 'Write Review', new_food_review_path(@food), :class => "btn btn-primary btn-lg", :role => "button" %> 
			</div>
			
			 	
        	<h2>Reviews:</h2>
        	<ul class="list-group ">
        		
			<% @reviews.each do |review| %>
			<li class="list-group-item"><%= link_to review.title+" : "+review.rating.to_s+" / 5.0 by "+review.user.email, review %> </li>
	
	<% end %>
           </ul>
			
			<% if current_user != nil && current_user.is_admin %>
				<%= link_to 'Destroy', @place, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :role => "button" %>
	<%= link_to 'Edit', edit_food_path(@food), :class => "btn btn-primary", :role => "button"  %> 
<% end %>
<%= link_to 'Back', Place.find(@food.place), :class => "btn btn-primary", :role => "button" %>
	<!-- <%= link_to 'Load From CSV', @place, action: :load_csv %> -->
	

        	
        	
        </div><!--end col-->
        <div class="col-md-2 ">
       
        </div>
      </div><!--end row-->
      

</div><!--end container--> 
